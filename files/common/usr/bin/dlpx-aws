# Wrapper around the "aws ..." command that incorporates a retryer to
# workaround sporadic segmentation fault core dump issues with the command.
#

set -o xtrace

ATTEMPTS=5
DELAY=1

for attempt in $(seq "$ATTEMPTS"); do
	aws "$@"
	retval=$?
	[[ $retval != 139 ]] && exit $retval

	#
	# We're here because the aws command exited with status 139,
	# which means it core dumped with a segmentation fault.
	#
	if [[ $attempt == "$ATTEMPTS" ]]; then
		echo "Too many failed attempts, aborting."
		exit $retval
	fi
	echo "Attempt $attempt failed, trying again after a small nap."
	sleep "$DELAY"
done
